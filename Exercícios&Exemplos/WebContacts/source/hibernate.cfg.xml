<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
                                         "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
 <session-factory>
  <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
  <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>
  <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/webcontacts</property>
  <property name="hibernate.connection.username">postgres</property>
  <property name="hibernate.connection.password">postgres</property>
  
  <!-- Show and print nice SQL on stdout -->
  <property name="show_sql">false</property>
  <property name="format_sql">true</property>
  
  <mapping class="main.java.domain.model.Contato"/>
  <mapping class="main.java.domain.model.ContatoEmpresa"/>
  <mapping class="main.java.domain.model.Telefone"/>
  <mapping class="main.java.domain.model.Tipo"/>
  
  
 </session-factory>
</hibernate-configuration>

